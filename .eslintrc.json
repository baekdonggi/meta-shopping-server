{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "linebreak-style": 0,
      // "editor.codeActionsOnSave": { "source.fixAll.eslint": false },
      "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
      "no-plusplus": ["error", {"allowForLoopAfterthoughts": true}] // ++ 및 -- 를 for 루프의 사후에 허용한다.
    }
  }